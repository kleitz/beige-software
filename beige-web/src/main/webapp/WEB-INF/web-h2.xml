<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
  http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd"
  version="2.5">
  <display-name>Beige WEB</display-name>
  <jsp-property-group>
    <trim-directive-whitespaces>true</trim-directive-whitespaces>
  </jsp-property-group>
  <listener>
    <listener-class>org.beigesoft.web.listener.WebContextCleaner</listener-class>
  </listener>
  <servlet>
    <servlet-name>entityList</servlet-name>
    <servlet-class>
      org.beigesoft.web.servlet.WEntityList
    </servlet-class>
    <load-on-startup>1</load-on-startup>
    <init-param>
      <param-name>factoryAppBeansClass</param-name>
      <param-value>org.beigesoft.web.factory.FactoryAppBeansH2</param-value>
    </init-param>
    <init-param>
      <param-name>initFactoryClass</param-name>
      <param-value>org.beigesoft.web.factory.InitAppFactory</param-value>
    </init-param>
    <init-param>
      <param-name>databaseName</param-name>
      <param-value>jdbc:h2:#currentDir#beigeaccounting</param-value>
    </init-param>
    <init-param>
      <param-name>databaseUser</param-name>
      <param-value>beigeaccounting</param-value>
    </init-param>
    <init-param>
      <param-name>databasePassword</param-name>
      <param-value>beigeaccounting</param-value>
    </init-param>
    <init-param>
      <param-name>isShowDebugMessages</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>newDatabaseId</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <param-name>ormSettingsDir</param-name>
      <param-value>beige-orm</param-value>
    </init-param>
    <init-param>
      <param-name>ormSettingsBaseFile</param-name>
      <param-value>persistence-h2.xml</param-value>
    </init-param>
    <init-param>
      <param-name>uvdSettingsDir</param-name>
      <param-value>beige-uvd</param-value>
    </init-param>
    <init-param>
      <param-name>uvdSettingsBaseFile</param-name>
      <param-value>base.xml</param-value>
    </init-param>
    <init-param>
      <param-name>dirJsp</param-name>
      <param-value>/WEB-INF/jsp/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>entityList</servlet-name>
    <url-pattern>/secure/entityList/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>entity</servlet-name>
    <servlet-class>
      org.beigesoft.web.servlet.WEntity
    </servlet-class>
    <init-param>
      <param-name>dirJsp</param-name>
      <param-value>/WEB-INF/jsp/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>entity</servlet-name>
    <url-pattern>/secure/entity/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>service</servlet-name>
    <servlet-class>
      org.beigesoft.web.servlet.WService
    </servlet-class>
    <init-param>
      <param-name>dirJsp</param-name>
      <param-value>/WEB-INF/jsp/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>service</servlet-name>
    <url-pattern>/secure/service/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>report</servlet-name>
    <servlet-class>
      org.beigesoft.web.servlet.WReport
    </servlet-class>
    <init-param>
      <param-name>dirJsp</param-name>
      <param-value>/WEB-INF/jsp/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>report</servlet-name>
    <url-pattern>/secure/report/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>mngSoftware</servlet-name>
    <servlet-class>
      org.beigesoft.web.servlet.WMngSoftware
    </servlet-class>
    <init-param>
      <param-name>dirJsp</param-name>
      <param-value>/WEB-INF/jsp/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>mngSoftware</servlet-name>
    <url-pattern>/mngSoftware/*</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp</location>
  </error-page>
</web-app>
