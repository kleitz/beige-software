  <artifactId>beige-software</artifactId>
  <version>1.1.3-SNAPSHOT</version>
  <packaging>pom</packaging>
  
  <name>Beigesoft software</name>  
  <description>Contains of Beige-Accounting, Beige-ORM, Beige-Replicator, Beige-Settings for standard Java and Android.</description>
  <url>http://www.beigesoft.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.version>1.7</java.version>
    <beige.version>1.1.3-SNAPSHOT</beige.version>
    <sqlite.version>3.8.11.2</sqlite.version>
    <postgresql.version>9.4-1206-jdbc4</postgresql.version>
    <jsp.version>2.2</jsp.version>
    <servlet.version>2.5</servlet.version>
    <h2.version>1.3.176</h2.version>
  </properties>

  <profiles>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-source-plugin</artifactId>
            <version>2.2.1</version>
            <executions>
              <execution>
                <id>attach-sources</id>
                <goals>
                  <goal>jar-no-fork</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>2.9.1</version>
            <executions>
              <execution>
                <id>attach-javadocs</id>
                <goals>
                  <goal>jar</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>1.6</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>check</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-checkstyle-plugin</artifactId>
            <version>2.17</version>
            <executions>
              <execution>
              <id>checkstyle</id>
              <phase>verify</phase>
              <goals>
                <goal>check</goal>
              </goals>
              </execution>
            </executions>
            <configuration>
              <suppressionsLocation>checkstyle-suppressions.xml</suppressionsLocation>
              <excludes>**/R.java,**/BuildConfig.java,**/androidtest/**,**/apache/**</excludes>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.rat</groupId>
            <artifactId>apache-rat-plugin</artifactId>
            <version>0.11</version>
            <configuration>
            <excludes>
              <exclude>command.txt</exclude>
              <exclude>**/apache/**</exclude>
              <exclude>maven-central-deploy.sh</exclude>
              <exclude>maven-central-deploy.log</exclude>
              <exclude>checkstyle-suppressions.xml</exclude>
              <exclude>assembly.xml</exclude>
              <exclude>findbug-exclude.xml</exclude>
              <exclude>**/log4j2.xml</exclude>
              <exclude>**/build.xml</exclude>
              <exclude>**/webdefault.xml</exclude>
              <exclude>**/jetty-web.xml</exclude>
              <exclude>**/MANIFEST.MF</exclude>
              <exclude>**/site/**</exclude>
              <exclude>**/res/**</exclude>
              <exclude>**/uml/**</exclude>
              <exclude>**/*.properties</exclude>
              <exclude>**/*.sh</exclude>
              <exclude>**/*.bat</exclude>
              <exclude>**/*.jsp</exclude>
              <exclude>**/*.svg</exclude>
              <exclude>**/*.min.js</exclude>
              <exclude>**/*.min.css</exclude>
              <exclude>**/*.db</exclude>
              <exclude>**/*.sqlite</exclude>
              <exclude>**/*.html</exclude>
              <exclude>**/*.sql</exclude>
              <exclude>**/*.tst.xml</exclude>
              <exclude>**/.directory</exclude>
            </excludes>
            </configuration>
            <executions>
              <execution>
              <id>rat</id>
              <phase>verify</phase>
              <goals>
                <goal>check</goal>
              </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>findbugs-maven-plugin</artifactId>
            <version>3.0.3</version>
            <configuration>
              <excludeFilterFile>findbug-exclude.xml</excludeFilterFile>
            </configuration>
            <executions>
              <execution>
              <id>findbugs</id>
              <phase>compile</phase>
              <goals>
                <goal>check</goal>
              </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-pmd-plugin</artifactId>
            <version>3.6</version>
            <configuration>
              <printFailingErrors>true</printFailingErrors>
              <excludes>
                <exclude>**/apache/**</exclude>
              </excludes>
            </configuration>
            <executions>
              <execution>
              <id>pmd</id>
              <phase>compile</phase>
              <goals>
                <goal>check</goal>
              </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  
